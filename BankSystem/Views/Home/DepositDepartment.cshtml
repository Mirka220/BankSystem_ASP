@model BankSystem.Models.Deposit

@{
    ViewData["Title"] = "Deposit Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDeposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Depos" class="control-label"></label>
                <input asp-for="Depos" class="form-control" />
                <span asp-validation-for="Depos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>